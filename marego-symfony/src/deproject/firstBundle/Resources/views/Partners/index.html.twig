{% extends '::base.html.twig' %}

{% block body -%}
<!DOCTYPE html>

<div id="container">
			<div id="header">
			
			<div>{% image '@deprojectfirstBundle/Resources/public/images/marego.jpg'  output="images/marego.jpg" %}
    <img src="{{ asset_url }}" alt="marego" align="right" width="150" height="80" />
    
    </div>
